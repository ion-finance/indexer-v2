{
  "name": "node-typescript-project-template",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clean": "rimraf ./build",
    "build": "npm-run-all format lint clean && tsc",
    "start": "ts-node -r tsconfig-paths/register build/src",
    "ts-node": "ts-node -r tsconfig-paths/register",
    "test-transactions": "ts-node -r tsconfig-paths/register src/scripts/testTransaction.ts",
    "generate-test": "ts-node -r tsconfig-paths/register ./test/integrations/scenarios/generateTestScenario.ts",
    "generate-cache": "ts-node -r tsconfig-paths/register src/scripts/generateTraceCache.ts",
    "show-cache": "ts-node -r tsconfig-paths/register src/scripts/showCache.ts",
    "local": "ts-node -r tsconfig-paths/register src",
    "local:watch": "nodemon src -e ts,json,yaml --exec 'node -r tsconfig-paths/register -r ts-node/register src'",
    "reset": "yarn prisma migrate reset && yarn apply-hypertable",
    "restart": "yarn reset && yarn local",
    "apply-hypertable": "ts-node -r tsconfig-paths/register ./src/scripts/applyHyperTable.ts",
    "lint": "eslint src",
    "format": "npx prettier --write src",
    "format:check": "npx prettier --check src",
    "test": "env-cmd -f .env.test yarn prisma db push --force-reset && DOTENV_CONFIG_PATH=.env.test jest",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "typescript",
    "node",
    "eslint",
    "prettier",
    "jest",
    "supertest"
  ],
  "author": "Elson Correia @ Before Semicolon",
  "license": "MIT",
  "devDependencies": {
    "@ion-finance/sdk": "^0.1.0",
    "@sentry/node": "^7.107.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.4.0",
    "@types/lodash": "^4.14.195",
    "@types/node": "^18.14.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.4.3",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "rimraf": "^4.1.2",
    "supertest": "^6.3.3",
    "tonweb": "^0.0.66",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@prisma/client": "5.0.0",
    "@ton/core": "^0.53.0",
    "@ton/crypto": "^3.2.0",
    "@ton/sandbox": "^0.13.1",
    "@ton/test-utils": "^0.3.1",
    "@ton/ton": "^13.8.0",
    "@types/bignumber.js": "^5.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "axios": "^1.4.0",
    "bignumber.js": "^9.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "eslint-plugin-prettier": "^5.1.3",
    "ethers": "^6.9.2",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "node-cron": "^3.0.3",
    "prisma": "^5.0.0",
    "readline": "^1.3.0",
    "redis": "^4.6.13",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "2.4.7",
    "winston-papertrail": "^1.0.5"
  }
}
