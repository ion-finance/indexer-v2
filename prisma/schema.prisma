// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pool {
  id            String   @id // pool address
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now()) @updatedAt
  name          String
  tokenXAddress String
  tokenYAddress String
  binStep       Int // 0 <= binStep <= 2^8 -1 (255)
  activeBinId   Int // 0 <= activeBinId <= 2^24 -1 (16777215)
}

model Token {
  id                  String   @id
  createdAt           DateTime @default(now())
  updatedAt           DateTime @default(now()) @updatedAt
  jettonMinterAddress String
  name                String
  symbol              String
  image               String
  decimals            Int
}

model Bins {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  binId       Int
  poolAddress String
  reserveX    String
  reserveY    String
}

model DepositedToBins {
  id              String   @id // txHash
  eventId         String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now()) @updatedAt
  timestamp       Int
  poolAddress     String
  senderAddress   String
  receiverAddress String
  tokenAddress    String
  deposited       Json     @default("{}")
}

model WithdrawnFromBins {
  id              String   @id // txHash
  eventId         String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now()) @updatedAt
  timestamp       Int
  poolAddress     String
  senderAddress   String
  receiverAddress String
  withdrawn       Json     @default("{}")
}

model Swap {
  id              String   @id // txHash
  eventId         String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now()) @updatedAt
  timestamp       Int
  poolAddress     String
  senderAddress   String
  receiverAddress String
  amountIn        String
  amountOut       String
  swapForY        Boolean
  activeBinId     Int
}

model TransferBatch {
  id            String   @id // txHash
  eventId       String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now()) @updatedAt
  timestamp     Int
  poolAddress   String
  senderAddress String
  fromAddress   String
  toAddress     String
  amounts       Json     @default("{}")
}

model LpTokenWallet {
  id           String   @id @default(uuid()) // TODO use wallet address?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now()) @updatedAt
  poolAddress  String
  ownerAddress String
  shares       Json     @default("{}")
}

enum OrderType {
  PLACED
  CANCLLED
  EXECUTED
  CLAIMED
}

model OrderHistory {
  id                 String    @id // txHash
  eventId            String
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @default(now()) @updatedAt
  timestamp          Int
  poolAddress        String
  senderAddress      String
  relatedOwnerAddres String? // In case of executed order, tx is only one but there are many order owners
  binId              Int
  orderForY          Boolean
  positionId         Int
  amountX            String
  amountY            String
  orderType          OrderType
}

model Order {
  id           String    @id @default(uuid())
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @default(now()) @updatedAt
  timestamp    Int
  poolAddress  String
  ownerAddress String
  binId        Int
  positionId   Int
  amountX      String    @default("0")
  amountY      String    @default("0")
  status       OrderType @default(PLACED)
  orderForY    Boolean
}

// last block or tx data
// heath check
model IndexerState {
  key   String @id
  value String
}
